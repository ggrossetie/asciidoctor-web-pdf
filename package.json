{
  "name": "asciidoctor-pdf",
  "version": "1.0.0-alpha.9",
  "description": "A PDF converter for AsciiDoc based on Asciidoctor.js",
  "engines": {
    "node": ">=10",
    "npm": ">=6.0.0"
  },
  "main": "lib/converter.js",
  "browser": "dist/browser/asciidoctor-pdf-document-converter.js",
  "bin": {
    "asciidoctor-pdf": "bin/asciidoctor-pdf",
    "asciidoctor-web-pdf": "bin/asciidoctor-pdf"
  },
  "files": [
    "dist",
    "bin",
    "lib",
    "css"
  ],
  "scripts": {
    "test": "npm run test:smoke && npm run test:js",
    "test:smoke": "./bin/asciidoctor-pdf --version",
    "test:js": "mocha test/**_test.js",
    "lint": "standard lib/**.js test/**.js tasks/**js",
    "dist": "mkdir -p dist/browser && browserify lib/document/document-converter.js -t brfs --standalone AsciidoctorPdfDocumentConverter -o dist/browser/asciidoctor-pdf-document-converter.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mogztter/asciidoctor-pdf.js.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mogztter/asciidoctor-pdf.js/issues"
  },
  "homepage": "https://github.com/Mogztter/asciidoctor-pdf.js#readme",
  "dependencies": {
    "@asciidoctor/cli": "3.4.0",
    "@fortawesome/fontawesome-svg-core": "1.2.30",
    "@fortawesome/free-brands-svg-icons": "5.14.0",
    "@fortawesome/free-regular-svg-icons": "5.14.0",
    "@fortawesome/free-solid-svg-icons": "5.14.0",
    "@ggrossetie/pagedjs": "0.1.42-next",
    "chokidar": "3.4.2",
    "file-url": "3.0.0",
    "fs-extra": "9.0.1",
    "html-entities": "^1.2.1",
    "mathjax": "3.1.0",
    "pdf-lib": "^1.2.1",
    "puppeteer": "5.2.1",
    "yargs": "15.4.1"
  },
  "devDependencies": {
    "@asciidoctor/core": "^2.2.0",
    "brfs": "2.0.2",
    "browserify": "^16.3.0",
    "chai": "4.2.0",
    "cheerio": "^1.0.0-rc.3",
    "dirty-chai": "2.0.1",
    "mocha": "8.1.3",
    "nunjucks": "^3.2.1",
    "pixelmatch": "^5.1.0",
    "rimraf": "^3.0.0",
    "sinon": "^9.0.2",
    "standard": "14.3.4"
  },
  "peerDependencies": {
    "@asciidoctor/core": "^2.2.0"
  }
}
